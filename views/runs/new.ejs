<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/runs/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>

  <form id="new-run-form" action="/runs" method="POST">
    <div>
      <label>Date:</label>
      <input type="date" name="date">
    </div>
    <div>
      <label>Start Time:</label>
      <input type="number" name="hour" min="1" max="12">:<input type="number" name="minutes" min="0" max="59">
      <select name="ampm">
        <option value="am">AM</option>
        <option value="pm">PM</option>
      </select>
    </div>
    <div>
      <label>End Time:</label>
      <input type="number" name="hour" min="1" max="12">:<input type="number" name="minutes" min="0" max="59">
      <select name="ampm">
        <option value="am">AM</option>
        <option value="pm">PM</option>
      </select>
    </div>
    <div>
      <label>Location:</label>
      <input type="text" name="location">
    </div>
    <div>
      <label>Host:</label>
      <input type="text" name="host">
    </div>
    <div>
      <label>Note:</label>
      <input type="text" name="note">
    </div>
    <div>
      <button type="submit">Add Run</button>
    </div>
  </form>

</main>

<%- include('../partials/footer') %>