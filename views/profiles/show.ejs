<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <div>
    <img 
      class="profile-avatar"
      src="<%= profile.avatar %>"
      alt="<%= profile.name %>'s avatar"
    >
    <h2>Position: <%= profile.position %></h2>
    <h2>Level: <%= profile.level %></h2>
  </div>
  <% if (isSelf) { %>
    <a href="/profiles/<%= profile._id %>/edit">
      <button type="submit">Edit</button>
    </a>
    <a href="/profiles/<%= profile._id %>/stats">
      <button type="submit">Stats</button>
    </a>
    <a href="/profiles/<%= profile._id %>/goals">
      <button type="submit">Goals</button>
    </a>
    <a href="/profiles">
      <button type="submit">Back to Profiles</button>
    </a>
    <form action="/profiles/<%= profile._id %>/?_method=DELETE" method="POST">
      <a href="/">
        <button type="submit">Delete Profile</button>
      </a>
    </form>
  <% } %>
</main>

<%- include('../partials/footer') %>