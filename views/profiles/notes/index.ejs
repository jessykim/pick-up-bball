<%- include('../../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/notes/index.css">
<%- include('../../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <div>
    <h2>Notes to Improve</h2>
    <form action="/profiles/<%= profile._id %>/notes" method="POST">
      <label>
        <input type="text" name="note">
        <button type="submit">Add</button>
      </label>
    </form>
    <% profile.notes.forEach(function(note) { %>
      <%= note.createdAt.toLocaleDateString() %>
      <%= note.note %> 
      <form action="/profiles/<%= profile._id %>/notes/<%= note._id %>?_method=DELETE" method="POST">
        <button>X</button>
      </form>
    <% }) %>
  </div>
</main>

<%- include('../../partials/footer') %>